<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:id="tabPaneAdmin" prefHeight="500.0" prefWidth="600.0" styleClass="admin-dialog-container" stylesheets="@AdminDialogs.css" tabClosingPolicy="UNAVAILABLE">
  <tabs>
    <Tab fx:id="tabUsers" text="User Management">
      <content>
        <VBox fx:id="vboxUsersContainer" prefHeight="400.0" prefWidth="500.0" spacing="10.0" styleClass="admin-dialog-container">
           <children>
              <Label fx:id="lblTotalUsers" styleClass="admin-stats-label" text="Total Users: 0" />
              <ListView fx:id="lstUsers" prefHeight="350.0" prefWidth="460.0" styleClass="admin-users-list" />
           </children>
           <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
           </padding>
        </VBox>
      </content>
    </Tab>
    <Tab fx:id="tabSystemStats" text="System Statistics">
      <content>
        <VBox fx:id="vboxStatsContainer" prefHeight="400.0" prefWidth="500.0" spacing="10.0" styleClass="admin-dialog-container">
           <children>
              <TextArea fx:id="txtSystemStats" editable="false" prefColumnCount="50" prefRowCount="15" prefWidth="400.0" styleClass="admin-stats-textarea" text="Platform Overview:&#10;- Total Users: 0&#10;- Community Members: 0&#10;- Administrators: 0&#10;&#10;Content Statistics:&#10;- Active Announcements: 0&#10;- Total Food Posts: 0&#10;- Active Food Posts: 0&#10;- Completed Food Posts: 0&#10;&#10;Events:&#10;- Total Events: 0&#10;- Upcoming Events: 0&#10;- Completed Events: 0&#10;&#10;User Activity:&#10;- Total Notifications Sent: 0&#10;- Total Comments: 0&#10;- Total Likes: 0" wrapText="true" />
           </children>
           <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
           </padding>
        </VBox>
      </content>
    </Tab>
    <Tab fx:id="tabModeration" text="Content Moderation">
      <content>
        <VBox fx:id="vboxModerationContainer" prefHeight="400.0" prefWidth="500.0" spacing="10.0" styleClass="admin-dialog-container">
           <children>
              <Label fx:id="lblModerationCount" styleClass="admin-stats-label admin-bold-label" text="Content requiring moderation: 0" />
              <ListView fx:id="lstModerationContent" prefHeight="300.0" prefWidth="460.0" styleClass="admin-moderation-list" />
              <HBox fx:id="hboxModerationButtons" spacing="10.0" styleClass="admin-button-container">
                 <children>
                    <Button fx:id="btnModerateSelected" mnemonicParsing="false" onAction="#handleModerateSelected" styleClass="admin-primary-button" text="Moderate Selected" />
                    <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" styleClass="admin-secondary-button" text="Refresh" />
                 </children>
                 <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
              </HBox>
           </children>
           <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
           </padding>
        </VBox>
      </content>
    </Tab>
  </tabs>
</TabPane>