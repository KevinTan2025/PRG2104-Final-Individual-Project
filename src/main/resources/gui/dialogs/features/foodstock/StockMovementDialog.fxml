<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<GridPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" hgap="10.0" vgap="10.0">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox fx:id="vboxStockInfo" spacing="5.0" styleClass="stock-info-box" GridPane.columnSpan="2">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="lblFoodItem" styleClass="food-item-label" text="Food Item: Sample Food" />
            <Label fx:id="lblCurrentStock" styleClass="current-stock-label" text="Current Stock: 0 units" />
            <Label fx:id="lblStockStatus" styleClass="stock-status-label" text="Status: IN_STOCK" />
            <Label fx:id="lblMinThreshold" styleClass="threshold-label" text="Minimum Threshold: 0 units" />
            <Label fx:id="lblLocation" styleClass="location-label" text="Location: Main Storage" />
            <Label fx:id="lblExpiry" styleClass="expiry-label" text="No expiry date" />
         </children>
      </VBox>
      
      <Label fx:id="lblAction" styleClass="field-label" text="Action:" GridPane.rowIndex="1" />
      <ComboBox fx:id="cmbAction" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Add Stock" />
               <String fx:value="Remove Stock" />
               <String fx:value="Adjust Stock" />
            </FXCollections>
         </items>
         <value>
            <String fx:value="Add Stock" />
         </value>
      </ComboBox>
      
      <Label fx:id="lblQuantity" styleClass="field-label" text="Quantity:" GridPane.rowIndex="2" />
      <TextField fx:id="txtQuantity" promptText="Quantity to add" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
      <Label fx:id="lblNotes" styleClass="field-label" text="Notes:" GridPane.rowIndex="3" />
      <TextArea fx:id="txtNotes" prefRowCount="3" promptText="Notes (optional)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
      <HBox fx:id="hboxButtons" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <children>
            <Button fx:id="btnExecute" onAction="#handleExecute" styleClass="execute-button" text="Execute" />
            <Button fx:id="btnCancel" onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@StockMovementDialog.css" />
   </stylesheets>
</GridPane>