<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true" prefHeight="566.0" prefWidth="300.0" styleClass="register-scroll-pane" stylesheets="@auth.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER" spacing="10.0" styleClass="register-main-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="btnBack" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="49.0" styleClass="register-back-button" text="Back" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" right="200.0" />
               </VBox.margin>
            </Button>
            <Text styleClass="register-page-title" text="Register an account" textAlignment="CENTER" />
            <Text fx:id="lblUsernameStatus" styleClass="register-status-label" text="{lblUsernameStatus}" wrappingWidth="194.0" />
            <TextField fx:id="registerUser" prefHeight="25.0" prefWidth="194.0" promptText="Username" styleClass="register-username-field" />
            <TextField fx:id="registerName" prefHeight="25.0" prefWidth="194.0" promptText="Full Name" styleClass="register-name-field" />
            <TextField fx:id="registerContact" prefHeight="25.0" prefWidth="194.0" promptText="Contact Info" styleClass="register-contact-field" />
            <TextField fx:id="registerEmail" prefHeight="25.0" prefWidth="194.0" promptText="Email" styleClass="register-email-field" />
            <Button fx:id="btnLogin" prefHeight="25.0" prefWidth="194.0" styleClass="register-send-email-button" text="âœ‰ Send Verification Email" />
            <Text fx:id="lblEmailStatus" styleClass="register-status-label" text="{lblEmailStatus}" wrappingWidth="194.0" />
            <Text fx:id="lblPasswordStatus" styleClass="register-status-label" text="{lblPasswordStatus}" wrappingWidth="194.0" />
            <PasswordField fx:id="registerPassword" prefHeight="25.0" prefWidth="194.0" promptText="Password" styleClass="register-password-field" />
            <Text fx:id="lblPasswordRepeatStatus" styleClass="register-status-label" text="{lblPasswordRepeatStatus}" wrappingWidth="194.0" />
            <PasswordField fx:id="registerPassword1" prefHeight="25.0" prefWidth="194.0" promptText="Password" styleClass="register-confirm-password-field" />
            <Button fx:id="btnRegister" prefHeight="25.0" prefWidth="194.0" styleClass="register-submit-button" text="Sign up" />
         </children>
      </VBox>
   </content>
</ScrollPane>
