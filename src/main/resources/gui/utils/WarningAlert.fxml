<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.utils.WarningAlertController" styleClass="warning-alert-dialog">
   <children>
      <HBox fx:id="hboxHeader" styleClass="alert-header">
         <children>
            <Label fx:id="lblIcon" styleClass="alert-icon" text="âš " />
            <Label fx:id="lblTitle" styleClass="alert-title" text="Warning" />
         </children>
      </HBox>
      <VBox fx:id="vboxContent" styleClass="alert-content">
         <children>
            <Label fx:id="lblMessage" styleClass="alert-message" text="Warning message" wrapText="true" />
