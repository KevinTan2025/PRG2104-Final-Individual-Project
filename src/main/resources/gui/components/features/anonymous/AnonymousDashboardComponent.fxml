<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" styleClass="anonymous-dashboard">
   <content>
      <HBox spacing="20.0" styleClass="main-content">
         <children>
            <!-- Activity Feed Area -->
            <VBox fx:id="vboxActivityFeed" styleClass="activity-feed-container" HBox.hgrow="ALWAYS">
