                              <Label fx:id="lblPostsToday" text="18" styleClass="stat-value" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0" styleClass="stat-row">
                           <children>
                              <Label text="Food Shared" styleClass="stat-label" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblFoodShared" text="12" styleClass="stat-value" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0" styleClass="stat-row">
                           <children>
                              <Label text="Events This Week" styleClass="stat-label" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblEventsThisWeek" text="7" styleClass="stat-value" />
