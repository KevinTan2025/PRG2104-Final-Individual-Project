                              </VBox>
                           </children>
                        </HBox>
                        <Button fx:id="btnViewAllEvents" onAction="#handleViewAllEvents" prefWidth="200.0" text="View All Events" styleClass="view-all-events-button" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
