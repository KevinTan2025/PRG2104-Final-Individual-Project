<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" styleClass="discussion-tab">
   <top>
      <VBox>
         <children>
            <HBox spacing="10.0" styleClass="top-controls">
               <children>
                  <Button fx:id="btnCreateTopic" onAction="#handleCreateTopic" text="Create Topic" styleClass="create-button" />
                  <ComboBox fx:id="cmbCategory" styleClass="category-combo" />
                  <Button fx:id="btnFilter" onAction="#handleFilter" text="Filter by Category" styleClass="filter-button" />
                  <Button fx:id="btnAddReply" onAction="#handleAddReply" text="Add Reply" styleClass="reply-button" />
                  <Button fx:id="btnLikeTopic" onAction="#handleLikeTopic" text="Like Topic" styleClass="like-button" />
                  <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" styleClass="refresh-button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox spacing="10.0" styleClass="search-controls">
               <children>
                  <TextField fx:id="txtSearch" promptText="Search topics..." styleClass="search-field" />
                  <Button fx:id="btnSearch" onAction="#handleSearch" text="Search" styleClass="search-button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="lstTopics" onMouseClicked="#handleListDoubleClick" styleClass="topics-list" />
   </center>
</BorderPane>